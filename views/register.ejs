    <script>
        var register = function(){
            console.log("버튼 클릭");
                url = "/register_ok";
                    var xhr = new XMLHttpRequest();
                    xhr.open('POST', url);
                    xhr.setRequestHeader('Content-type', "application/json");
                    var info = {"userName":document.getElementById("inputName").value,
                    "userEmail":document.getElementById("inputEmail").value,
                    "userPass":document.getElementById("inputPassword").value,
                    "userPhone":document.getElementById("inputPhone").value};
                    info = JSON.stringify(info);
                    xhr.send(info);
                    xhr.addEventListener('load', function () {
                        data = xhr.responseText;
                        data = JSON.parse(data);
                        console.log(data.join_result);
                        if(data.join_result==0){
                            alert("가입에 실패하셨습니다");
                            document.getElementById("inputName").value='';
                            document.getElementById("inputEmail").value='';
                            document.getElementById("inputPassword").value='';
                            document.getElementById("inputPhone").value='';
                        }else if(data.join_result==1){
                            alert("가입에 성공하셨습니다");
                            window.location.assign('/');
                        }
                    });
            }
        </script>
